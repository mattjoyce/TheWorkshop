{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "workshop": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["name"]
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "background": { "type": "string" },
          "is_facilitator": { "type": "boolean" }
        },
        "required": ["name", "role"]
      }
    },
    "context": {
      "type": "object",
      "additionalProperties": true
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name"]
      }
    }
  },
  "required": ["workshop", "participants"]
}